{
  "name": "anti-kb",
  "private": true,
  "dependencies": {
    "@hotwired/turbo-rails": "^8.0.4",
    "@fancyapps/fancybox": "^3.5.7",
    "@popperjs/core": "^2.11.8",
    "@rails/ujs": "^7.1.3-4",
    "autoprefixer": "^10.4.19",
    "bootstrap": "^5.3.2",
    "jquery": "^3.7.1",
    "jquery-tagcanvas": "^2.9.0",
    "jquery-ui": "^1.13.3",
    "jquery.easing": "^1.4.1",
    "esbuild": "^0.23.0",
    "nodemon": "^3.1.4",
    "postcss": "^8.4.39",
    "postcss-cli": "^11.0.0",
    "sass": "^1.77.6",
    "trix": "^1.2.0"
  },
  "scripts": {
    "build": "esbuild app/javascript/*.* --bundle --sourcemap --format=esm --outdir=app/assets/builds --public-path=/assets --loader:.ttf=file --loader:.woff2=file",
    "build:css:compile": "sass ./app/assets/stylesheets/front/application.scss:./app/assets/builds/front/application.css --no-source-map --load-path=node_modules",
    "build:css:prefix": "postcss ./app/assets/builds/front/application.css --use=autoprefixer --output=./app/assets/builds/front/application.css",
    "build:css": "sass ./app/assets/stylesheets/front/application.scss:./app/assets/builds/front/application.css --no-source-map --load-path=node_modules",
    "watch:css": "nodemon --watch ./app/assets/stylesheets/ --ext scss --exec \"yarn build:css\""
  },
  "browserslist": [
    "defaults"
  ]
}