<div class="row">
  <section class="col-12 col-lg-8 col-xl-6 login-box">
    <%= form_for resource, :as => resource_name, :url => registration_path(resource_name) do |f| %>
      <%= render :partial => 'layouts/notice', :locals=>{:notice=>notice,:alert=>alert} %>
      <article>
        <h3>필수입력 사항</h3>
        <div class="card">
        <div class="card-body">
          <div class="form-group col-12">
            <%= f.label :name %>
            <%= f.text_field :name, :class => 'form-control', :required => 'required' %>
          </div>
          <div class="form-group col-12">
            <%= f.label :email %>
            <%= f.email_field :email, :class => 'form-control', :required => 'required' %>
          </div>
          <div class="form-group col-12">
            <%= f.label :password %>
            <%= f.password_field :password, :class => 'form-control', :required => 'required' %>
          </div>
          <div class="form-group col-12">
            <%= f.label :description %>
            <%= f.text_field :description, :class => 'form-control', :required => 'required' %>
          </div>
        </div>
        </div>
      </article>
      <article>
        <h3>선택입력 사항</h3>
        <div class="card">
        <div class="card-body">
          <div class="form-group col-12">
            <%= f.label :photo %>
            <% if resource.photo? %>
              <%= image_tag resource.photo.small_thumb.url %>
            <% end %>
              <div class="custom-file">
                <%= f.file_field :photo, :class => "custom-file-input" %>
                <label class="custom-file-label" for="customFile" data-browse="<%=t(:browse) %>"><%=t(:choose_file) %></label>
              </div>
            <%= f.hidden_field :photo_cache %>
          </div>
          <div class="form-group col-12">
            <%= f.label :url %>
            <%= f.url_field :url, :class => 'form-control',:placeholder=>"http://www.example.com" %>
          </div>
        </div>
        </div>
      </article>
      <% if Rails.env.production? %>
        <div class="form-group">
          <%= recaptcha_tags %>
        </div>
      <% end %>
      <div class="form-group actions">
        <%= f.submit t(:sign), :class => 'btn btn-lg btn-primary btn-block' %>
      </div>
    <% end %>
  </section>
</div>
