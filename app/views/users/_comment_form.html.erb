<%= form_tag create_comment_to_users_path,:id=>"comment_form_#{user_id}" do %>
  <%= hidden_field_tag "id", user_id,{:id=>"comment_user_id_#{user_id}"} %>
  <% if user_signed_in? %>
  <% if request.xhr? %>
  <%= text_area_tag "comment[comment]",'',{:id=>"comment_comment_#{user_id}"} %>
  <% else %>
  <%= text_area_tag "comment[comment]",'',{:id=>"comment_comment_#{user_id}",:required=>"required"} %>
  <% end %>
  <% else %>
  <%= text_area_tag "comment[comment]",'로그인후에 사용가능합니다.',{:id=>"comment_comment_#{user_id}",:class=>"login_confirm",:readolny=>"readolny",:required=>"required"} %>
  <% end %>
  <%= submit_tag "제출",:class=>"btn btn-primary" %>
 <% end %>
