<%= form_for [:admin,article] do |f| %>
<% if article.errors.any? %>
<div id="error_explanation" class="alert alert-danger">
	<a href="#" class="close" data-dismiss="alert">&times;</a>
	<h2><%= pluralize(article.errors.count, "error") %> prohibited this request from being saved:</h2>
	<ul>
		<% article.errors.full_messages.each do |msg| %>
		<li>
			<%= msg %>
		</li>
		<% end %>
	</ul>
</div>
<% end %>
<div class="form-group">
	<%= f.label :title %>
	<%= f.text_field :title,:class=>"form-control",:required=>"required" %>
</div>
<div class="form-group">
	<%= f.label :description %>
	<%= f.text_area :description,:class=>"form-control",:required=>"required" %>
</div>
<div class="form-group">
	<%= f.label :url %>
	<%= f.url_field :url,:class=>"form-control",:required=>"required" %>
</div>
<div class="form-group">
	<%= f.label :enable %>
	<%= f.check_box :enable %>
</div>
<div class="form-group actions">
	<%= f.submit :class=>"btn btn-primary" %>
</div>
<% end %>
