<%= form_for @notice, :html => { :class => 'col-12' } do |f| %>
  <% if @notice.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <a href="#" class="close" data-dismiss="alert">&times;</a>
      <h2><%= pluralize(@notice.errors.count, "error") %> prohibited this notice from being saved:</h2>
      <ul>
        <% @notice.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, :class => 'form-control', :required => 'required' %>
  </div>
  <%= f.fields_for :notice_content do |c| %>
    <div class="form-group">
      <%= c.label :content %>
      <%= c.text_area :content, :class => 'form-control', :rows => 10 %>
    </div>
  <% end %>
  <div class="form-group actions">
    <%= f.submit :class => "btn btn-primary btn-lg btn-block" %>
  </div>
<% end %>
